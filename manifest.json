{
  "manifest_version": 3,
  "name": "NGA回帖增强器",
  "version": "1.0",
  "description": "NGA论坛的AI智能润色、回复",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://bbs.nga.cn/*",
    "*://nga.178.com/*",
    "https://api.deepseek.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://bbs.nga.cn/*", "*://nga.178.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "NGA Forum Enhancer"
  }
}